  <body>
    <main>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
        <% @user.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
      <% end %>
      <p id="notice"></p>
      <div class='container'>
        <div class='row'>
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>User info</h2>
              <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
                <div class="form_group">
                  <%= f.label:name %>
                  <%= f.text_field :name, :class => 'form-control name' %>
                </div>
                <div class="form_group">
                  <%= f.label:Image %>
                  <%= f.attachment_field :profile_image, :class => 'form-control-file user_image' %>
                </div>
                <div class="form_group">
                  <%= f.label:Introduction %>
                  <%= f.text_field :introduction, :class => 'form-control introduction' %>
                </div>
                <div class="form_group">
                  <%= f.submit 'Update User', :class => 'btn btn-secondary' %>
                </div>
              <% end %>

          </div>
        </div>
      </div>
    </main>
  </body>
</html>
