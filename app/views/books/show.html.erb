<main>
  <p id="notice"></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
          <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></tr>
            <tr>
	          <th>name</th>
	          <th><%= @user.name %></th>
          </tr>
          <tr>
	          <th>introduction</th>
	          <th><%= @user.introduction %></th>
          </tr>
        </table>

<div class='row'>
  <% if @user.id == current_user.id %>
    <%= link_to "", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
  <% end %>
</div>
  <h2 class="mt-3">New book</h2>
    <%= form_with model: @book, url:books_path, local:true do |f| %>
  <h5>title</h5>
    <%= f.text_field :title %>
  <h5>Opinion</h5>
    <%= f.text_area :body %>
  <label></label>
    <%= f.submit 'Create Book', :class => 'btn btn-success' %>
    <% end %>
</div>

<div class='col-md-8 offset-md-1'>
  <h2>Book detail</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  </table>